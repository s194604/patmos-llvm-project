;
; Tests that multiplying by 2 is optimized into a shl instruction.
;
;//////////////////////////////////////////////////////////////////////////////////////////////////

; CHECK-LABEL: main:
define i32 @main(i32 %value)  {
entry:
  %0 = mul nsw i32 %value, 2

; CHECK: sl $r{{[0-9]+}} = $r{{[0-9]+}}, 1

  ret i32 %0
}

